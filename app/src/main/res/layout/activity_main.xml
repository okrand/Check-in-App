<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude" />

    <TextView
        android:id="@+id/lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lat"
        android:text="Longitude"
         />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lon"
        android:text="Address"
         />

    <EditText
        android:id="@+id/edit_checkin"
        android:layout_below="@id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_checkin"
        android:layout_below="@id/edit_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check In"/>

    <Button
        android:id="@+id/button_map"
        android:text="Go To Map"
        android:layout_below="@id/edit_checkin"
        android:layout_toEndOf="@id/button_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listview_checks"
        android:layout_below="@+id/button_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
